#include<stdio.h>
#include<stdlib.h>
int main(){
    int r[50],n,i,j,h,hm=0,s,d,temp,index;
    printf("Enter the no of request\n");
    scanf("%d",&n);
    printf("Enter the request in sequence\n");
    for ( i = 0; i < n; i++)
    {
        scanf("%d",&r[i]);
    }
    printf("\nEnter the initial head\n");
    scanf("%d",&h);
    printf("Enter the total disc size\n ");
    scanf("%d",&s);
    printf("Enter the direction\n(1 for high)\n(0 for low)\n");
    scanf("%d",&d);

    for ( i = 0; i < n; i++)
    {
        for ( j = 0; j < n-i-1; j++)
        {
           if (r[j]>r[j+1])
           {
            temp = r[j];
            r[j]= r[j+1];
            r[j+1] = temp;
           }
        }
    }

    for ( i = 0; i < n; i++)
    {
        if (h<r[i])
        {
            index = i;
            break;
        }
    }
 
 if (d==1)
   {
    for ( i = index; i < n; i++)
    {
       hm = hm + abs(r[i]-h);
        h = r[i];
    }
    hm = hm + abs(s-r[i-1]-1); 
    hm = hm + abs(s-1-0);
    h= 0;
    for ( i = 0; i < index; i++)
    {
         hm = hm + abs(r[i]-h);
        h = r[i];
    }
   }
     else
   {
        for ( i = index -1; i >=0; i--)
    {
         hm = hm + abs(r[i]-h);
        h = r[i];
    }
    hm = hm + abs(r[i+1]-0); 
    hm = hm + abs(s-1-0);
    h= s-1;

    for ( i = n-1; i >= index; i--)
    {
        hm = hm + abs(r[i]-h);
        h = r[i];
    }
   }
    printf("\nTotal head movement is %d",hm);

    return 0;
}
    

   
    
